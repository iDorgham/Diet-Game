# Frontend Environment Configuration for Diet Game
# Copy this file to .env and update the values with your actual configuration

# API Configuration
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=10000

# Firebase Configuration (replace with your actual Firebase project details)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=your-firebase-app-id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# External API Keys (for direct frontend usage if needed)
VITE_USDA_API_KEY=your-usda-api-key-here
VITE_EDAMAM_APP_ID=your-edamam-app-id
VITE_EDAMAM_APP_KEY=your-edamam-app-key
VITE_SPOONACULAR_API_KEY=your-spoonacular-api-key

# App Configuration
VITE_APP_NAME=NutriQuest
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-Powered Diet Planner

# Development Configuration
VITE_DEBUG_MODE=true
VITE_MOCK_API=false
VITE_ENABLE_DEVTOOLS=true

# Feature Flags
VITE_ENABLE_AR=true
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true

# Monitoring
VITE_SENTRY_DSN=your-sentry-dsn-here
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Environment
VITE_NODE_ENV=development
